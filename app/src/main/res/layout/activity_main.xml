<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35454F"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="#35454F"
        android:gravity="center">

        <ImageButton
            android:id="@+id/back"
            style="@style/Button.Action"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6" />

        <TextView
            style="@style/Text.Center"
            android:layout_marginRight="8dp"
            android:text="Level"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/levelTV"
            style="@style/Text.Center"
            android:textColor="#FFF"
            tools:text="7" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_scope"
            android:padding="8dp"
            android:src="@drawable/ic_money" />

        <Space
            android:layout_width="4dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/scoreTv"
            style="@style/Text.Center"
            android:text="300"
            android:textColor="#FFF" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/bg_bottom"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="180dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02"
            tools:src="@drawable/uzbekistan" />


        <LinearLayout
            android:id="@+id/layoutAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55">

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

            <Button
                style="@style/Button.Answer"
                android:layout_weight="1"
                tools:text="A" />

        </LinearLayout>

        <ImageView
            android:id="@+id/showLetter"
            style="@style/Button.Action"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="15dp"
            android:padding="0dp"
            android:src="@drawable/ic_visibility_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutVariant1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/deleteLetter"
            app:layout_constraintTop_toBottomOf="@+id/layoutAnswers"
            app:layout_constraintVertical_bias="0.509" />

        <ImageView

            android:id="@+id/deleteLetter"
            style="@style/Button.Action"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:padding="0dp"
            android:src="@drawable/ic_delete_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutVariant1"
            app:layout_constraintLeft_toRightOf="@id/showLetter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutAnswers" />


        <LinearLayout
            android:id="@+id/layoutVariant1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp"

            app:layout_constraintBottom_toTopOf="@id/layoutVariant2"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintVertical_chainStyle="packed">

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="A" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="P" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="P" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="L" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="E" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="E" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="E" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="E" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutVariant2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutVariant1">

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="A" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="P" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="P" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="L" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="E" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="E" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="E" />

            <Button
                style="@style/Button.Variant"
                android:layout_weight="1"
                android:text="E" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>